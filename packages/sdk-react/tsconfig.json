{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "composite": true,
    "target": "ESNext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/*.spec.tsx", "**/*.test.tsx"]
}
