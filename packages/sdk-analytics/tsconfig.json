{
	"compilerOptions": {
	  "target": "es2018",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "declaration": true,
	  "sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }