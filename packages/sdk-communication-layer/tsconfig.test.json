{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2016"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
