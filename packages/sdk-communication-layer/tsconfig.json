{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "es6",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "incremental": true,
    "lib": ["DOM", "ES2016"],
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src", "./package.json"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "references": [{ "path": "../sdk-types" }, { "path": "../analytics-client" }]
}
